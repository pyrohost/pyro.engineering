---
import { Icon } from "astro-icon/components";
import { type authors } from "../../content/config";
import socialSites from "../../lib/utils/socialSites";

const props = Astro.props;
const author = props.data as authors;
const socials = socialSites(author.socials) || []
---

<div class="max-w-sm border border-dashed border-neutral-800 m-8">
  <a href={`/team/${author.name}`}>
    <img
      class="max-h-40 w-full object-contain"
      src={author.image}
      alt={author.name}
    />
  </a>
  <div class="p-5">
    <h1 class="mb-2 text-2xl font-bold tracking-tight text-white">
      <a href={`/team/${author.name}`}>
        {author.name}
      </a>
    </h1>
    <p class="mb-1 font-normal text-gray-400">
      {author.description}
    </p>
    <p class="mb-1 font-normal text-gray-400">
      {author.position}
    </p>
    {
      socials && socials.length > 0 && (
        <div class="flex gap-2 pt-4">
          {socials.map((site) => (
            <a href={site.link} target="_blank" rel="noopener noreferrer">
              <Icon name={site.icon} class="w-12 h-12 mr-2 " />
            </a>
          ))}
        </div>
      )
    }
  </div>
</div>

